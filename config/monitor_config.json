{
  "email_enabled": true,
  "slack_enabled": false,
  "webhook_url": null,
  "email_recipients": ["aiva-dev@example.com"],
  "smtp_server": "smtp.example.com",
  "smtp_port": 587,
  "smtp_username": "monitor@example.com",
  "smtp_password": "${SMTP_PASSWORD}",
  "monitoring_interval": 3600,
  "thresholds": {
