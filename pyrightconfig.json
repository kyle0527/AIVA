{
  // 只檢查開啟檔案的配置
  "include": [],
  "exclude": [
    "**/__pycache__",
    "**/.venv",
    "**/node_modules",
    "**/dist",
    "**/.git",
    "_archive/**",
    "_out/**",
    "aiva_platform_integrated.egg-info/**",
    "backup/**",
    "models/**",
    "logs/**"
  ],
  // 錯誤報告優化 - 只顯示重要錯誤
  "reportMissingImports": "warning",
  "reportMissingTypeStubs": "none", 
  "reportImportCycles": "warning",
  "reportUnusedImport": "none",
  "reportUnusedVariable": "none",
  "reportUndefinedVariable": "error",
  "reportGeneralTypeIssues": "warning",
  "typeCheckingMode": "basic",
  
  // 只分析開啟檔案的設定 + 30秒延遲檢查
  "useLibraryCodeForTypes": false,
  "autoImportCompletions": true,
  "indexing": false,
  "watchForSourceChanges": false,
  "watchForLibraryChanges": false,
  "enableTypeIgnoreComments": true,
  
  // 延遲檢查設定 - 避免修改時頻繁檢查
  "diagnosticRefreshDelay": 30000,
  "pythonVersion": "3.13",
  "pythonPlatform": "All",
  "executionEnvironments": [
    {
      "root": "services/aiva_common",
      "extraPaths": ["../../"]
    },
    {
      "root": "services/core", 
      "extraPaths": ["../../"]
    },
    {
      "root": "testing",
      "extraPaths": ["../"]
    }
  ],
  // 不限制任何目錄的檢查 - 開啟檔案都會掃描
  "strict": [],
  "venvPath": ".",
  "venv": ".venv"
}
